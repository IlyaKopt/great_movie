!!!
%html
  %head
    %title GreatMovie
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .container-fluid
      %nav.navbar-inverse
        .navbar-header
          %button.navbar-toggle.collapsed{ aria: { expanded: 'false' }, data: { target: '#bs-navbar-collapse-1', toggle: 'collapse' }, type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'GreatMovie', root_path, class: 'navbar-brand'
        #bs-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to 'Users', users_path
            %li
              = link_to 'Movies', movies_path
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to destroy_admin_session_path, method: :delete do
                %i.glyphicon.glyphicon-off
                = 'Logout'
    = yield