%h1 Listing users
.container
  .row
    .col-lg-12
      %table.table.table-hover.table-bordered.table-striped
        %thead
          %tr
            %th Username
            %th Favorited movies
            %th Action
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= 0
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }